<% if @smart_answers_form.errors.any? %>

  <h1 class="heading-large"><%= t(".error_heading") %></h1>

  <% @smart_answers_form.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>

<% else %>

  <%= form_for(@smart_answers_form) do |f| %>
    <%= render("shared/errors", object: @smart_answers_form) %>

    <h1 class="heading-large"><%= t(".heading") %></h1>

    <%= f.hidden_field :id, value: params[:id] %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>

<% end %>
