<% content_for :title, t(".heading.#{@transient_registration.tier}").html_safe %>
<%= render("waste_carriers_engine/shared/back", token: @your_tier_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @your_tier_form do |f| %>
      <h1 class="govuk-heading-l">
        <%= t(".heading.#{@transient_registration.tier}") %>
      </h1>
      <p class="govuk-body">
        <%= t(".paragraph_1.#{@transient_registration.tier}", registration_charge: display_pence_as_pounds(Rails.configuration.new_registration_charge)) %>
      </p>
      <%= render "shared/what_are_lower_and_upper_tier" %>
      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
