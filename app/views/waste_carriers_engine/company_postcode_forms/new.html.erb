<% content_for :title, t(".heading.#{@company_postcode_form.business_type}").html_safe %>
<%= render("waste_carriers_engine/shared/back", token: @company_postcode_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @company_postcode_form do |f| %>
      <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>
      <h1 class="govuk-heading-l">
        <%= t(".heading.#{@company_postcode_form.business_type}") %>
      </h1>
       <p class="govuk-body"><%= t(".page_hint") %></p>
      <%= f.govuk_text_field :temp_company_postcode,
          width: "one-half",
          label: {
            text: t(".temp_company_postcode_label")
          },
          hint: {
            text: t(".temp_company_postcode_hint")
          },
          autocomplete: "postal-code" %>
      <%= f.govuk_submit t(".next_button") %>

      <% if @company_postcode_form.errors.added?(:temp_company_postcode, :no_results) %>
        <div class="govuk-body">
          <%= link_to(t(".manual_address_link"), skip_to_manual_address_company_postcode_forms_path(@company_postcode_form.token)) %>
        </div>
      <% end %>
    <% end %>

    <%= render("waste_carriers_engine/shared/os_terms_footer") %>
  </div>
</div>
