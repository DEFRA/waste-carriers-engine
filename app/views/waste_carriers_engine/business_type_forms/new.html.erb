<%= render("waste_carriers_engine/shared/back", back_path: back_business_type_forms_path(@business_type_form.token)) %>

<%= form_for @business_type_form do |f| %>
  <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>

  <%=
    f.govuk_collection_radio_buttons :business_type,
    [
      OpenStruct.new(
        id: "soleTrader",
        name: t(".options.individual")
      ),
      OpenStruct.new(
        id: "limitedCompany",
        name: t(".options.limited_company")
      ),
      OpenStruct.new(
        id: "partnership",
        name: t(".options.partnership")
      ),
      OpenStruct.new(
        id: "limitedLiabilityPartnership",
        name: t(".options.limited_liability_partnership")
      ),
      OpenStruct.new(
        id: "localAuthority",
        name: t(".options.local_authority")
      ),
      OpenStruct.new(
        id: "charity",
        name: t(".options.charity")
      )
    ],
    :id,
    :name,
    legend: { text: t(".heading"), size: "l", tag: "h1" }
  %>

  <p class="govuk-body"><%= t(".help") %></p>

  <%= f.govuk_submit t(".next_button") %>
<% end %>
