<% content_for :title, t(".heading.#{@business_name_form.business_type}").html_safe %>
<%= render("waste_carriers_engine/shared/back", back_path: back_business_name_forms_path(@business_name_form.token)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @business_name_form do |f| %>
      <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>
      <%= f.govuk_text_field :business_name,
          width: "one-half",
          label: {
            text: t(".heading.#{@business_name_form.business_type}"),
            tag: "h1", size: "l"
          },
          hint: {
            text: t(".business_name_label.#{@business_name_form.business_type}")
          } %>
      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
