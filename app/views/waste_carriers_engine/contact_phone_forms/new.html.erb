<%= render("waste_carriers_engine/shared/back", token: @contact_phone_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@contact_phone_form) do |f| %>
      <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>

      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>

      <%= f.govuk_text_field :phone_number,
          label: { text: t(".phone_number_label") },
          hint: { text: t(".phone_number_hint") },
          width: "one-half",
          autocomplete: "tel_national"
      %>

      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
