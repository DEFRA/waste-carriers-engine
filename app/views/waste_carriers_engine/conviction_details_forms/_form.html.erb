<%= form_for @conviction_details_form do |f| %>
  <%= render partial: "waste_carriers_engine/shared/error_summary", locals: { f: f } %>

  <h1 class="govuk-heading-l">
    <%= t(".heading") %>
  </h1>
  <legend class="govuk-visually-hidden">
    <%= t(".heading") %>
  </legend>

  <p class="govuk-body">
    <%= t(".paragraph_1") %>
  </p>

  <%= render("waste_carriers_engine/shared/person_name", form: @conviction_details_form, f: f) %>


  <%= f.govuk_text_field :position,
      label: { text: t(".position") },
      width: "one-half",
      autocomplete: "organization-title" %>

  <%= render("waste_carriers_engine/shared/dob", form: @conviction_details_form, f: f) %>

  <%= f.hidden_field :token, value: @conviction_details_form.token %>

  <div class="govuk-form-group">
    <%= f.submit t(".add_person_link"), class: "button-link" %>
  </div>

  <div class="govuk-form-group">
    <%= f.govuk_submit t(".next_button") %>
  </div>
<% end %>
