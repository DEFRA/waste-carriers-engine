<%= render("waste_carriers_engine/shared/back", token: @confirm_bank_transfer_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@confirm_bank_transfer_form) do |f| %>
      <h1 class="govuk-heading-l"><%= t(".heading") %></h1>
      <p class="govuk-body">
        <%= t(".paragraphs.instructions") %>
      </p>

      <% unless WasteCarriersEngine.configuration.host_is_back_office? %>
        <p class="govuk-body">
          <%= t(".paragraphs.payment_confirmation") %>
        </p>

        <p class="govuk-body">
          <%= t(".paragraphs.instant_confirmation") %>
        </p>
      <% end %>

      <p class="govuk-body">
        <%= link_to(t(".link_text"),
                    go_back_forms_path(@confirm_bank_transfer_form.token)) %>
      </p>

      <%= f.govuk_submit t(".next_button") %>
    <% end %>
  </div>
</div>
