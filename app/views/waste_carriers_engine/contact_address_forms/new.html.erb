<%= render("waste_carriers_engine/shared/back", token: @contact_address_form.token) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @contact_address_form do |form| %>
      <%= form.govuk_error_summary link_base_errors_to: 'uprn' %>
      <% content_for :error_title, "Error" if form.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <%= t(".heading") %>
      </h1>

      <p class="govuk-body">
        <%= t(".postcode_label") %>
        <br/>
        <span class="postcode govuk-!-font-weight-bold">
          <%= @contact_address_form.temp_contact_postcode %>
        </span>
        <%= link_to(t(".postcode_change_link"),
            go_back_forms_path(@contact_address_form.token))  %>
      </p>

      <%= form.fields_for :contact_address do |f| %>
        <%= render("waste_carriers_engine/shared/select_address", form: @contact_address_form, address: :contact_address, f: f) %>
      <% end %>

      <p class="govuk-body">
        <%= link_to(t(".manual_address_link"), skip_to_manual_address_contact_address_forms_path(@contact_address_form.token)) %>
      </p>
      <%= form.govuk_submit t(".next_button") %>
    <% end %>
    <%= render("waste_carriers_engine/shared/os_terms_footer") %>
  </div>
</div>
