<%= render("shared/back", back_path: back_construction_demolition_forms_path(@construction_demolition_form.reg_identifier)) %>

<div class="text">
  <%= form_for(@construction_demolition_form) do |f| %>
    <%= render("shared/errors", object: @construction_demolition_form) %>

    <div class="form-group">
      <fieldset class="inline">
        <legend>
          <h1 class="heading-large"><%= t(".heading") %></h1>
        </legend>

        <div class="multiple-choice">
          <%= f.radio_button :construction_waste, "true" %>
          <%= f.label :construction_waste, t(".option_true"), value: "true" %>
        </div>
        <div class="multiple-choice">
          <%= f.radio_button :construction_waste, "false" %>
          <%= f.label :construction_waste, t(".option_false"), value: "false" %>
        </div>
      </fieldset>
    </div>
    <div class="form-group">
      <details>
        <summary>
          <span class="summary"><%= t(".waste_detail_subheading") %></span>
        </summary>
        <div class="panel panel-border-narrow">
          <p><%= t(".waste_detail_paragraph_1") %></p>
          <p><%= t(".waste_detail_paragraph_2") %></p>
        </div>
      </details>
    </div>

    <%= f.hidden_field :reg_identifier, value: @construction_demolition_form.reg_identifier %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>
</div>
