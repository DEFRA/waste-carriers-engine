<%= form_for(@registration) do |f| %>
  <% if @registration.errors.any? %>
    <div class="error-summary" role="alert">
      <h2 class="heading-medium error-summary-heading"><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul class="error-summary-list">
      <% @registration.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :regIdentifier, class: "form-label" %>
    <%= f.text_field :regIdentifier, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :companyName, class: "form-label" %>
    <%= f.text_field :companyName, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit new registration", class: "button" %>
  </div>
<% end %>
