<%= render("shared/back", back_path: back_company_postcode_forms_path(@company_postcode_form.reg_identifier)) %>

<div class="text">
  <%= form_for(@company_postcode_form) do |f| %>
    <%= render("shared/errors", object: @company_postcode_form) %>

    <h1 class="heading-large"><%= t(".heading_#{@company_postcode_form.business_type}") %></h1>

    <% if @company_postcode_form.errors[:company_postcode].any? %>
    <div class="form-group form-group-error">
    <% else %>
    <div class="form-group">
    <% end %>
      <fieldset id="company_postcode">
        <legend class="visuallyhidden">
          <%= t(".heading_#{@company_postcode_form.business_type}") %>
        </legend>

        <% if @company_postcode_form.errors[:company_postcode].any? %>
        <span class="error-message"><%= @company_postcode_form.errors[:company_postcode].join(", ") %></span>
        <% end %>

        <%= f.label :company_postcode, class: "form-label" do %>
          <%= t(".company_postcode_label") %>
          <span class='form-hint'><%= t(".company_postcode_hint") %></span>
        <% end %>
        <%= f.text_field :company_postcode, value: @company_postcode_form.company_postcode, class: "form-control" %>

      </fieldset>
    </div>

    <%= f.hidden_field :reg_identifier, value: @company_postcode_form.reg_identifier %>
    <div class="form-group">
      <%= f.submit t(".next_button"), class: "button" %>
    </div>
  <% end %>
</div>
